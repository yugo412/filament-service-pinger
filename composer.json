{
  "name": "yugo/filament-service-pinger",
  "description": "A simple service uptime monitor built natively for Filament.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Yugo\\FilamentServicePinger\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Yugo",
      "email": "dedy.yugo.purwanto@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.2",
    "filament/filament": "^4.1 || ^5.0",
    "phiki/phiki": "^2.1"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Yugo\\FilamentServicePinger\\Provider"
      ]
    }
  },
  "require-dev": {
    "laravel/pint": "^1.27",
    "phpstan/phpstan": "^2.1",
    "orchestra/testbench": "^10.9"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@clear",
      "@prepare"
    ],
    "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "lint": [
      "@php vendor/bin/pint --ansi",
      "@php vendor/bin/phpstan analyse --verbose --ansi"
    ],
    "test": "vendor/bin/phpunit"
  }
}
